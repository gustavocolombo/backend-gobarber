{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "editor.formatOnSave": true,

    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "import/extensions":[
        "error",
        "ignorePackages", {
          "ts" : "never"
        }
      ]
    },
    "import/resolver":{
      "typescript": {}
    }
    }
